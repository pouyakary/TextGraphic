            "type": "node",
            "request": "launch",
            "name": "Launch Test/Main",
            "program": "${workspaceFolder}/textkit/test/main.ts",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/out/compiled/**/*.js"]
        }
    ]
}